<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/actionBar">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/imageRestaurant"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textNameCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageRestaurant"
        android:layout_alignTop="@+id/imageRestaurant"
        android:layout_alignLeft="@+id/imageRestaurant"
        android:layout_alignRight="@+id/imageRestaurant"
        android:text="aaa"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textSize="24sp"
        android:background="#80000000"
        android:textColor="#ffffffff"/>

</RelativeLayout>